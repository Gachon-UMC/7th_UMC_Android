<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_panel_background"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:src="@drawable/img_home_panel_background_2"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"  />

    <ImageView
        android:id="@+id/home_panel_btn_nugu_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_main_mike"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/home_panel_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스물 셋\n그리고 서른 둘"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_panel_btn_nugu_iv"/>

    <ImageView
        android:id="@+id/home_panel_btn_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/btn_panel_play_large"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_panel_btn_nugu_iv"/>

    <TextView
        android:id="@+id/home_panel_album_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 12곡     2024.02.20"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_img_1_cv"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_panel_album_img_1_cv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_img_2_cv">

        <ImageView
            android:id="@+id/home_panel_album_img_1_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_home_panel2_album_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/home_panel_album_title_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="스물셋"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_title_1_tv"
        app:layout_constraintTop_toTopOf="@id/home_panel_album_img_1_cv"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_1_cv"/>

    <TextView
        android:id="@+id/home_panel_album_singer_1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_panel_album_title_1_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_1_cv"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_1_cv"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/home_panel_album_img_2_cv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="3dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/home_panel_background">

        <ImageView
            android:id="@+id/home_panel_album_img_2_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_home_panel2_album_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/home_panel_album_title_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopper"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toTopOf="@id/home_panel_album_title_2_tv"
        app:layout_constraintTop_toTopOf="@id/home_panel_album_img_2_cv"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_2_cv"/>

    <TextView
        android:id="@+id/home_panel_album_singer_2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이유 (IU)"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/home_panel_album_title_2_tv"
        app:layout_constraintBottom_toBottomOf="@id/home_panel_album_img_2_cv"
        app:layout_constraintStart_toEndOf="@id/home_panel_album_img_2_cv"/>

</androidx.constraintlayout.widget.ConstraintLayout>