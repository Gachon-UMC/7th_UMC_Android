<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:networkSecurityConfig="@xml/network_security_config"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/flo_app_logo_rounded"
        android:label="@string/app_name"
        android:roundIcon="@drawable/flo_app_logo_rounded"
        android:supportsRtl="true"
        android:theme="@style/Theme.FLO"
        tools:targetApi="31">

        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"
            android:exported="true"/>

        <activity android:name=".ui.song.SongActivity"
            android:exported="true"
            android:theme="@style/StatusBarTheme"/>

        <activity android:name=".ui.login.LogInActivity"
            android:exported="true"
            android:theme="@style/StatusBarTheme"/>

        <activity android:name=".ui.signup.SignUpOptionActivity"
            android:exported="true"
            android:theme="@style/StatusBarTheme"/>

        <activity android:name=".ui.signup.SignUpActivity"
            android:exported="true"
            android:theme="@style/StatusBarTheme"/>
    </application>

</manifest>