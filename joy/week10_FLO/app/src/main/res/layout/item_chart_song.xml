<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_chart_song_album_cover_cv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:cardCornerRadius="5dp"
        android:elevation="0dp">

        <ImageView
            android:id="@+id/item_chart_song_album_cover_iv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/img_album_cover_2"/>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/item_chart_song_num_tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryBlack"
        android:textSize="20sp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/item_chart_song_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/item_chart_song_title_tv"
        app:layout_constraintStart_toEndOf="@id/item_chart_song_album_cover_cv"/>

    <TextView
        android:id="@+id/item_chart_song_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Whiplash"
        android:textColor="@color/colorPrimaryBlack"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/item_chart_song_num_tv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_chart_song_singer_tv"/>

    <TextView
        android:id="@+id/item_chart_song_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="aespa"
        android:textColor="@color/bold_gray_color"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/item_chart_song_num_tv"
        app:layout_constraintTop_toBottomOf="@id/item_chart_song_title_tv"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/item_chart_song_play_btn"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/btn_player_play"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>